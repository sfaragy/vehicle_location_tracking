<%- include('header') -%>
<%- include('sidebar') -%>

<div class="flex flex-row flex-wrap flex-1 flex-grow content-start pl-16">
    <div class="p-5">
        <table id="vehiclesTable" class="border-collapse w-full border border-slate-400 dark:border-slate-500 bg-white dark:bg-slate-800 text-sm shadow-sm">
            <thead class="">
                <tr>
                    <th class="w-1/2 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Vehicle ID</th>
                    <th class="w-1/2 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Vehicle Details</th>
                    <th class="w-1/2 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Operates</th>
                    <th class="w-1/2 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">GPS ID</th>
                    <th class="w-1/2 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Last Location / Time</th>
                    <th class="w-1/2 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Log Time</th>
                    <th class="w-1/2 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Contrill</th>
                </tr>
            </thead>

            <tbody>
                <% for(var i=0; i < vehicles_list.length; i++) { %>
                <tr id="_last_location_id">
                    <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= vehicles_list[i].vehicle_id %></td>
                    <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= vehicles_list[i].vehicle_type %></td>
                    <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400">
                        <%= vehicles_list[i].first_name %> &nbsp; <%= vehicles_list[i].last_name %><br>
                        <%= vehicles_list[i].email %> <br>
                        <%= vehicles_list[i].mobile %> <br>
                        <%= vehicles_list[i].address %> 
                    </td>
                    <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= vehicles_list[i].gps_device_id %></td>
                    <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= vehicles_list[i].present_location %></td>
                    <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= vehicles_list[i].log_time %></td>
                    <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400 btn"><a href="/admin/getVehicleLocations/<%= vehicles_list[i].vehicle_id %>" ><button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                          </svg></button></a></td>
                </tr>
                <% } %>
            </tbody>
        </table> 

        <p class="py-2"><%- pagination_links %></p>

    </div>

</div>



<%- include('footer') -%>